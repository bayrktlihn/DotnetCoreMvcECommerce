@section menu{
    @await Html.PartialAsync("_admin_menu")
}

@section user_information{
    @await Component.InvokeAsync("AdminDetail")
}

@model List<Order>


<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">UBold</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">eCommerce</a></li>
                            <li class="breadcrumb-item active">Orders</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Orders</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        

                        <div class="table-responsive">
                            <table class="table table-centered table-nowrap mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        
                                        <th>Order ID</th>
                                        <th>Products</th>
                                        <th>Date</th>
                                        <th>Total</th>
                                        <th>Order Status</th>
                                        <th style="width: 125px;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach(Order order in Model){
                                        <tr>
                                            
                                            <td><a href="ecommerce-order-detail.html"
                                                    class="text-body font-weight-bold">@order.OrderId</a> </td>
                                            <td>
                                                @foreach (CartItem cartItem in order.Cart.CartItems)
                                                {
                                                    <a href="#"><img
                                                        src="/img/product/@cartItem.Product.ImageUrl" alt="product-img"
                                                        height="32" /></a>
                                                }
                                                
                                            </td>
                                            <td>
                                                @order.Date
                                            </td>
                                            
                                            <td>
                                                @order.Cart.CalculateTotalPrice()
                                            </td>
                                            
                                            <td>
                                                <h5><span class="badge badge-info">Shipped</span></h5>
                                            </td>
                                            <td>
                                                <a asp-controller="Admin" asp-action="OrderDetail" asp-route-id="@order.OrderId" class="action-icon"> <i
                                                        class="mdi mdi-eye"></i></a>
                                                
                                                <a asp-controller="Admin" asp-action="DeleteOrder" asp-route-id="@order.OrderId" class="action-icon"> <i
                                                        class="mdi mdi-delete"></i></a>
                                            </td>
                                        </tr>
                                    }

                                    


                                </tbody>
                            </table>
                        </div>

                        
                    </div> <!-- end card-body-->
                </div> <!-- end card-->
            </div> <!-- end col -->
        </div>
        <!-- end row -->

    </div> <!-- container -->

</div> <!-- content -->